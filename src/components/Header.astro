---
const navItems = [
  { name: 'Home', href: '/' },
  { name: 'Framework', href: '/framework' },
  { name: 'defiNNition', href: '/definnition' },
  { name: 'Contact', href: '/contact' },
];
---

<header class="sticky top-0 z-50 bg-white/90 backdrop-blur-md border-b border-gray-200/50 shadow-sm">
  <nav class="container-custom">
    <div class="flex items-center justify-between h-16 md:h-20">
      <!-- Logo -->
      <a href="/" class="flex items-center space-x-3 group">
        <div class="h-10 md:h-12 w-auto flex items-center">
          <img src="/logo.svg" alt="iNNv0 Logo" class="h-full w-auto hover:brightness-110 transition-all filter drop-shadow-sm" />
        </div>
        <div class="flex flex-col">
          <span class="text-xl md:text-2xl font-bold gradient-text leading-none mt-1">iNNv0</span>
          <span class="text-[10px] uppercase tracking-widest text-primary-600 font-bold leading-none mt-0.5">ðŸ§ª experimental</span>
        </div>
      </a>
      
      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-1">
        {navItems.map(item => (
          <a 
            href={item.href}
            class="px-4 py-2 rounded-lg text-gray-700 hover:text-primary-600 hover:bg-primary-50 transition-all font-medium"
          >
            {item.name}
          </a>
        ))}
      </div>
      
      <!-- CTA Button -->
      <div class="hidden md:block">
        <a href="/contact" class="btn-primary">
          Get Started
        </a>
      </div>
      
      <!-- Mobile Menu Button -->
      <button 
        id="mobile-menu-button"
        class="md:hidden p-2 rounded-lg hover:bg-gray-100 transition-colors"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
    
    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden md:hidden pb-4">
      <div class="flex flex-col space-y-2">
        {navItems.map(item => (
          <a 
            href={item.href}
            class="px-4 py-3 rounded-lg text-gray-700 hover:text-primary-600 hover:bg-primary-50 transition-all font-medium"
          >
            {item.name}
          </a>
        ))}
        <a href="/contact" class="btn-primary text-center mt-2">
          Get Started
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
